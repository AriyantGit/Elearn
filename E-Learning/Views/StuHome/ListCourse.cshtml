@model IEnumerable<E_Learning.Models.Course>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-bordered table-hover ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TutorDetail.Fname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Version)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                <div class="container">
                    @Html.DisplayFor(modelItem => item.TutorDetail.Fname)
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cname)
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                @Html.ActionLink("Registration", "Registration", new { id = item.Id })  |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>

    }

</table>

