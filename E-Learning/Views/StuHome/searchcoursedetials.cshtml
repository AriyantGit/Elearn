@model IEnumerable<E_Learning.Models.Course>
<script src="~/Content/Sweetalaert/sweetalert.js"></script>

@{
    ViewBag.Title = "searchcoursedetials";
}

<div class=" text-center  bg-warning m-0 p-3 vivify unfold " style="border-radius:1.5rem;">
    <h2 class="text-center text-capitalize text-dark vivify unfold">Searching Details<i class="fa fa-search fa-sm"></i></h2>
</div>
<hr />
@{ if (Model.Count() != 0)
    {

        <table class="table bg-warning p-1 m-1">


            @foreach (var item in Model)
            {
            <div class="card border vivify driveInRight p-0 m-3 border-info">
                <div class="card-header  text-capitalize  bg-light text-center">
                    <strong class="display-4 vivify fadeIn">
                        @Html.DisplayFor(modelItem => item.Cname)
                    </strong>
                </div>
                <div class="card-body bg-white">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title"><u>Author</u> </h5>
                                <p class="card-text ">
                                    @Html.DisplayFor(modelItem => item.TutorDetail.Fname) &nbsp; @Html.DisplayFor(modelItem => item.TutorDetail.Lname)
                                </p>
                                <h5 class="card-title"><u>Course Level</u> </h5>
                                <p class="card-text">
                                    @Html.DisplayFor(modelItem => item.Clevel)
                                </p>
                            </div>
                            <div class="col text-center">
                                <h5 class="card-title"><u>Course Fees</u> </h5>
                                <p class="card-text">
                                    <i class="fa fa-credit-card " aria-hidden="true"></i>  @Html.DisplayFor(modelItem => item.Fee)
                                </p>
                            </div>
                        </div>
                    </div>



                </div>
                <div class="card-footer text-lg-center alert-primary">
                    @*@Html.ActionLink("Registration", "Registration", new { id = item.Id })*@

                    <a href="/stuhome/Registration/@item.Id" value="Create" class="btn hvr-sweep-to-right btn-success btn-lg text-center d-flex  justify-content-center d-md-table mx-auto"  >

                        <span class=" vivify popInLeft delay-1000">Registration</span>
                        <span><i class="fa fa-marker"></i></span>
                    </a>
                </div>
            </div>

            }

        </table>
    }
    else
    {
        <script>
            swal({

                text: "No Course Found",
                icon: "warning",
                timer: 3000

            }).then(function () {
               // Response.Redirect(Url.Action("SearchCourse", "Stuhome"));
               window.location.href = '@Url.Action("SearchCourse", "Stuhome")';

                });;
        </script>
        <h1 class="display-1 text-center vivify popInTop">No Course Found</h1>
    }
}

<style>
    .card-footer:hover {
        font-size: 20px;
        font-weight: bold;
    }
</style>
