@model IEnumerable<E_Learning.Models.QuestionSet>

@{
    ViewBag.Title = "Index";
}


@if (Model.Count()!=0 )
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        {



            var a = 0;

            foreach (var item in Model)
            {
                <input name="list.Index" type="hidden" value=@a />
                <div class="container-xl">
                    <div class="card">
                        <div class="card-header bg-danger ">
                            <table class="table">
                                <tbody>
                                    <tr class="row">
                                        <th class="col-sm-10"><h4>@Html.DisplayFor(modelItem => item.QuestionDescription)</h4></th>
                                        <th class="col-sm-2"><h4>Marks @Html.DisplayFor(modelItem => item.Mark)</h4></th>

                                    </tr>
                                </tbody>

                            </table>

                        </div>
                        <div class="card-body">


                            <div class="form-check card-text">
                                <label class="form-check-label ">
                                    <p class=" text-success font-weight-bold ">
                                        <input type="radio" name="list[@a]" class="form-check-input" required value="@(item.QuestionSetId+".1" )" />
                                        @Html.DisplayFor(modelItem => item.Option1)
                                    </p>
                                </label>
                            </div>
                            <div class="form-check card-text">
                                <label class="form-check-label ">
                                    <p class=" text-success font-weight-bold ">
                                        <input type="radio" name="list[@a]" class="form-check-input" required value="@(item.QuestionSetId+".2")" />
                                        @Html.DisplayFor(modelItem => item.Option2)
                                    </p>
                                </label>
                            </div>
                            <div class="form-check card-text">
                                <label class="form-check-label ">
                                    <p class=" text-success font-weight-bold ">
                                        <input type="radio" name="list[@a]" class="form-check-input" required value="@(item.QuestionSetId+".3")" />
                                        @Html.DisplayFor(modelItem => item.Option3)
                                    </p>
                                </label>
                            </div>
                            <div class="form-check card-text">
                                <label class="form-check-label ">
                                    <p class=" text-success font-weight-bold ">
                                        <input type="radio" name="list[@a]" class="form-check-input" required value="@(item.QuestionSetId+".3")" />
                                        @Html.DisplayFor(modelItem => item.Option3)
                                    </p>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                a += 1;
            }



            <input type="submit" value="Submit" />
        }
    }
}


