@model IEnumerable<E_Learning.Models.TotalLike>



@*<table class="table  table-hover text-center">

    <tbody class="table-bordered-bd-danger"></tbody>*@
@foreach (var item in Model)
{
    <div class="card">
        
        <div class="card-body">
            <div class="progress-card">
                <div class="d-flex justify-content-between mb-1">

                    <span class="text-muted fw-bold"> <small> @Html.DisplayFor(modelItem => item.TopicList.TopicName)</small></span>
                    <span class="text-muted fw-bold">  @Html.DisplayFor(modelItem => item.TopicList.Views)<i class="fa fa-eye"></i></span>
                </div>
                <div class="progress mb-2" style="height: 7px;">
                    @if (Convert.ToInt32(item.TopicList.Views) >= 90)
                    {
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Html.DisplayFor(modelItem => item.TopicList.Views)%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="Great Job"></div>
                    }
                    else if (Convert.ToInt32(item.TopicList.Views) >= 50 && Convert.ToInt32(item.TopicList.Views) < 90)
                    {
                        <div class="progress-bar bg-warning" role="progressbar" style="width: @Html.DisplayFor(modelItem => item.TopicList.Views)%" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="Greate Performance"></div>
                    }
                    else if (Convert.ToInt32(item.TopicList.Views) >= 10 && Convert.ToInt32(item.TopicList.Views) < 50)
                    {
                        <div class="progress-bar bg-info" role="progressbar" style="width: @Html.DisplayFor(modelItem => item.TopicList.Views)%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="Moderate Performance"></div>
                    }
                    else
                    {
                        <div class="progress-bar bg-danger" role="progressbar" style="width: @Html.DisplayFor(modelItem => item.TopicList.Views)%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="Please hold on "></div>
                    }

                </div>
            </div>

        </div>
    </div>
}



