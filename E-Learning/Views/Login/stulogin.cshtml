@model E_Learning.Models.Student

@{
    Layout = null;
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@if (ViewBag.message != null)
{
    <script>
        alert("@ViewBag.message");
    </script>
}


<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img src="~/Image/img_avatar3.png" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        @using (Html.BeginForm("StudentLogin","Login",FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control display-1 fadeIn fa fa-eye second", placeholder = "Enter Your Mail Id" } })
            @*<input type="text" id="login" class="fadeIn second" name="login" placeholder="login">*@
            @Html.PasswordFor(model => model.Password, new { @class = "form-control fadeIn third", placeholder = "Enter Your Password" })
            @*<input type="text" id="password" class="fadeIn third" name="login" placeholder="password">*@
            <input type="submit" class="fadeIn fourth" value="Log In">
        }

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>

    </div>
</div>


<link href="~/Content/Custome CSS/login/login.css" rel="stylesheet" />